@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Worker>

<p>Workers</p>

@if (@Model.Count == 0)
{
  <h3>No employees have been added yet...</h3>
} 

<ul>
  @foreach(Worker worker in Model)
  {
    <li>@Html.ActionLink($"{worker.Name}", "Details", new { id = worker.WorkerId })</li>
  }
</ul>