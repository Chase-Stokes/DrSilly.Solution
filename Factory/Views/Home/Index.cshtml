@{
  Layout = "_Layout";
}


<h4>Machinery: </h4>

@if (@ViewBag.Machines.Count == 0)
{
  <h3>No machinery has been added yet...</h3>
} 

<ul>
  @foreach(var machine in ViewBag.Machines)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
</ul>


<h4>Employees: </h4>

@if (@ViewBag.Workers.Count == 0)
{
  <h3>No employees have been added yet...</h3>
} 

<ul>
  @foreach(var worker in ViewBag.Workers)
  {
    <li>@Html.ActionLink($"{worker.Name}", "Details", new { id = worker.WorkerId })</li>
  }
</ul>